{{#partial "content"}}
    <div style="background-image: url('/images/elephant2.jpg'); background-position: center; background-repeat: no-repeat; background-size: cover;">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="text-center">
                    <h1>All Recorded Animals</h1>
                </div>
                {{#if animals}}
                    {{#each animals}}
                        <table class="table table-dark table-hover">
                            <thead>
                            <tr>
                                <th>Animal</th>
                                <th>Age</th>
                                <th>Health</th>
                                <th>Type</th>

                            </tr>
                            </thead>
                            <tbody>
                            <tr>

                                <td>{{name}}</td>
                                <td>{{age}}</td>
                                <td>{{health}}</td>
                                <td>{{type}}</td>
<!--                                <td><a href="/endangered/{{id}}/delete" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i>Delete</a></td>-->

                            </tr>
                            </tbody>

                        </table>
                    {{/each}}
                {{else}}
                    <h1>No Animals Recorded yet!</h1>
                {{/if}}

            </div>
            <div class="col-md-3" ></div>


        </div>
    </div>
{{/partial}}

{{> layout.hbs}}