{{#partial "content"}}

    <div class="d-flex justify-content-around align-items-center">
        <form action="/sighting/new" method="post" class="border border-2 rounded m-3 p-3">
            <div class="text-center">
                <h1>Add Animal Sighting</h1>
            </div>
            <div class="form-group">
                <label for="rangerName">Ranger Name</label>
                <input type="text" id="rangerName" class="form-control" name="rangerName">
            </div>

            <div class="form-group">
                <label for="animalId">Animal</label>
                <select class="browser-default custom-select" id="animalId" name="animalId">
                        <option value="0" selected>Select Animal Spotted</option>
                    {{#each animals}}
                        <option value="{{id}}">{{name}}</option>

                    {{/each}}

                </select>
            </div>

            <div class="form-group">
                <label for="location">Select Location</label>
                <select class="browser-default custom-select" id="location" name="location">
                    <option value="Unknown Area" selected>Select Location</option>
                    <option value="River Bank">River Bank</option>
                    <option value="Pride Rock">Pride Rock</option>
                    <option value="Sub valley">Sun Valley</option>
                    <option value="Entrance Area">Entrance Area</option>
                    <option value="Exit A Area">Exit A Area</option>
                    <option value="Exit B Area">Exit B Area</option>
                    <option value="Resort Mbaya">Resort Mbaya</option>
                </select>
            </div>

            <div class="m-2 p-2 d-flex justify-content-around align-content-center">
                <button type="submit" class="btn btn-lg btn-primary button-gradient">SUBMIT</button>
            </div>

        </form>
    </div>

{{/partial}}
{{> layout.hbs}}

